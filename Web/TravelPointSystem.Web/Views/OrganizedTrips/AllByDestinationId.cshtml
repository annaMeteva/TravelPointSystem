@model TravelPointSystem.Web.ViewModels.OrganizedTrips.OrganizedTripsByDestinationIdListViewModel
@{
    this.ViewData["Title"] = "Organized Trips ";
}

<div class="text-center mt-5 mb-3 h1">
    @if (Model.OrganizedTrips.FirstOrDefault().Destination.Country == null)
    {
        this.ViewData["Title"] = "No Results";
    }
    else
    {
    <span>@this.ViewData @Model.OrganizedTrips.FirstOrDefault().Destination.Country, @Model.OrganizedTrips.FirstOrDefault().Destination.Town</span>
    }
</div>

<div class="row d-flex justify-content-evenly ml-5">
    @foreach (var trip in this.Model.OrganizedTrips)
    {
        <div class="col-md-3 my-5">
            <div class="card" style="width: 17rem;">
                <img src=@trip.ImageUrl class="card-img-top" id="card-img-cover">
                <div class="card-body">
                    <h5 class="card-title">@trip.Name</h5>
                    <p class="card-text">-</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">-</li>
                    <li class="list-group-item">-</li>
                </ul>
                <div class="card-body d-flex justify-content-between">
                    <a class="btn btn-outline-primary">View more</a>
                    <a class="btn btn-outline-primary">Reservation</a>
                </div>
            </div>
        </div>
    }
</div>