@model TravelPointSystem.Web.ViewModels.Reservations.FlightCreateInputModel
@{
    this.ViewData["Title"] = "New Flight reservation";
    var flightsItems = Model.FlightsItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<div class="text-center mt-5 mb-3 h1">@this.ViewData["Title"]</div>

<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FlightNumber" class="control-label"></label>
        <select asp-for="FlightNumber" class="form-control" asp-items="flightsItems"></select>
        <span asp-validation-for="FlightNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Next</button>
</form>